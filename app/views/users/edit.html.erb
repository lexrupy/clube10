<% title "Informações do usuário" %>

<% form_for current_user, :html => {:multipart => true} do |f| -%>
	<p>  
		<%= f.label :display_name, "Nome" %>&nbsp;<small>(Nome para exibição)</small><br />
		<%= f.text_field :display_name %>
	</p>

	<p>
		Créditos: <%= number_to_currency current_user.balance %>
	</p>


	<div class="avatar96">
    <%= display_avatar(current_user, :size => 96) %>
  </div>

  <p>
    <strong>Como alterar meu avatar?</strong>
  </p>
  <p>
    Nosso site usa <%= link_to_gravatar %> para obter o Avatar dos usuários com base em seus endereços de email.<br />
		 <%= link_to_gravatar %> pode ser utilizado gratuitamente. <%= link_to_gravatar_sign_up %> caso você ainda não o utilize.</p>

	<%= submit_tag "Confirmar", :disable_with => 'Aguarde...' %> ou <%= link_to "Voltar", :back %>
<% end -%>

<% content_for :jsplace do -%>
	<%= javascript_tag "Form.focusFirstElement('edit_user_#{current_user.id}')" %>
<% end -%>
