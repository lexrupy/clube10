<% title "Acesso ao sistema" %>

<p>Ainda não é cadastrado? <%= link_to "Cadastre-se agora!", signup_path %></p>

<% form_tag sessions_path, :id => 'new_session' do %>
  <p>
    <%= label_tag :login, "Usuário ou Email" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password, "Senha" %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Entrar", :disabled_with => 'Logando...' %></p>
<% end %>

<% content_for :jsplace do -%>
	<%= javascript_tag "Form.focusFirstElement('new_session')" %>
<% end -%>

