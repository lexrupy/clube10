<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title>Clube 10 - <%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
	  <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="user_nav">
				<%= link_to "Home", root_path %> |
        <% if current_user -%>
					<%= link_to h(current_user.show_display_name), edit_user_path(current_user) %> |
					<%= link_to "Minhas reservas", reserves_path %> |
					<%= link_to "Fale conosco", new_contact_path %>	|
          <%= link_to 'Sair', logout_path %>
        <% else -%>
          <%= link_to 'Cadastre-se', new_user_path %> ou
          <%= link_to 'Acesse agora!', login_path %>
        <% end -%>
      </div>

			<div id="flash_messages">
  			<%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
			</div>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>
    </div>
  <div id="jsplace"><%= yield :jsplace %></div>
  </body>
</html>

